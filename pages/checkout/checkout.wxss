/** 结算页面 - 微信风格卡片设计 */
page {
  background: #f7f7f7;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 商品信息 */
.product-section {
  padding: 30rpx;
}

.product-card {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.product-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #fafafa;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-ai {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(45deg, #07c160, #10ad6a);
}

.ai-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.product-placeholder {
  width: 100%;
  height: 100%;
  background: #fafafa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 40rpx;
  color: #666666;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-title {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}

.product-desc {
  color: #666666;
  font-size: 26rpx;
}

.product-price {
  color: #ff6b35;
  font-size: 36rpx;
  font-weight: bold;
}

/* 通用section样式 */
.section-title {
  color: #333333;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

/* 收货地址 */
.address-section {
  padding: 0 30rpx 30rpx;
}

.address-card {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.address-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.contact-name {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.contact-phone {
  color: #666666;
  font-size: 26rpx;
}

.address-detail {
  color: #666666;
  font-size: 26rpx;
  line-height: 1.4;
}

.address-placeholder {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.placeholder-text {
  color: #666666;
  font-size: 28rpx;
}

.arrow {
  color: #999999;
  font-size: 32rpx;
}

/* 配送方式 */
.delivery-section {
  padding: 0 30rpx 30rpx;
}

.delivery-card {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.delivery-item {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.delivery-name {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.delivery-desc {
  color: #666666;
  font-size: 24rpx;
}

.delivery-fee {
  color: #07c160;
  font-size: 28rpx;
  font-weight: bold;
}

/* 支付方式 */
.payment-section {
  padding: 0 30rpx 30rpx;
}

.payment-card {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.payment-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.payment-item:last-child {
  border-bottom: none;
}

.payment-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.payment-icon {
  font-size: 32rpx;
  color: #07c160;
}

.payment-name {
  color: #333333;
  font-size: 28rpx;
}

.payment-radio {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  position: relative;
}

.payment-radio.selected {
  border-color: #07c160;
  background: #07c160;
}

.payment-radio.selected::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background: white;
  border-radius: 50%;
}

/* 订单金额 */
.amount-section {
  padding: 0 30rpx 30rpx;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.amount-label {
  color: #666666;
  font-size: 28rpx;
}

.amount-value {
  color: #333333;
  font-size: 28rpx;
}

.amount-item.total {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
  margin-top: 20rpx;
}

.amount-item.total .amount-label {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}

.amount-item.total .amount-value {
  color: #ff6b35;
  font-size: 36rpx;
  font-weight: bold;
}

.amount-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 20rpx 0;
}

/* 底部支付按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.total-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.total-label {
  color: #666666;
  font-size: 28rpx;
}

.total-price {
  color: #ff6b35;
  font-size: 36rpx;
  font-weight: bold;
}

.pay-btn {
  background: linear-gradient(135deg, #07c160, #10ad6a);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.pay-btn:disabled {
  background: #cccccc;
  color: #999999;
  box-shadow: none;
}
