/** 订单页面 - 微信风格卡片设计 */
page {
  background: #f7f7f7;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 页面标题 */
.page-header {
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
}

.page-title {
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}

/* 订单列表 */
.orders-list {
  padding: 0 30rpx;
}

.order-item {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.order-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-number {
  color: #666666;
  font-size: 26rpx;
}

.order-status {
  font-size: 26rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  color: #ff9800;
  background: rgba(255, 193, 7, 0.1);
}

.order-status.paid {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.order-content {
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.product-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #fafafa;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-ai {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(45deg, #07c160, #10ad6a);
}

.ai-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.product-placeholder {
  width: 100%;
  height: 100%;
  background: #fafafa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 40rpx;
  color: #666666;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-title {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}

.product-desc {
  color: #666666;
  font-size: 26rpx;
}

.product-price {
  color: #ff6b35;
  font-size: 36rpx;
  font-weight: bold;
}

.order-footer {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
}

.order-time {
  color: #666666;
  font-size: 24rpx;
}

.order-actions {
  display: flex;
  gap: 20rpx;
}

.btn-pay {
  background: linear-gradient(135deg, #07c160, #10ad6a);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.btn-detail {
  background: #ffffff;
  color: #333333;
  border: 1rpx solid #e0e0e0;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 30rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.empty-desc {
  color: #666666;
  font-size: 28rpx;
  margin-bottom: 60rpx;
}

.btn-shop {
  background: linear-gradient(135deg, #07c160, #10ad6a);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}
