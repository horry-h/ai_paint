/** 相框选择页面 - 微信风格卡片设计 */
page {
  background: #f7f7f7;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 预览区域 */
.preview-section {
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.preview-card {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  background: #fafafa;
  object-fit: cover;
}

.preview-placeholder {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  background: #fafafa;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #e0e0e0;
}

.preview-ai {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background: linear-gradient(45deg, #07c160, #10ad6a);
}

.ai-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.placeholder-icon {
  font-size: 40rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #666666;
}

.preview-overlay {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.preview-text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 样式选择 */
.style-section {
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.style-scroll {
  white-space: nowrap;
}

.style-list {
  display: flex;
  gap: 20rpx;
  padding: 8rpx 0;
}

.style-item {
  width: 200rpx;
  background: #ffffff;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.style-item.active {
  border-color: #07c160;
  box-shadow: 0 0 20rpx rgba(7, 193, 96, 0.3);
}

.style-preview {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx 16rpx 0 0;
  background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
}

.style-text {
  color: #333333;
  font-size: 24rpx;
  font-weight: 600;
}

.style-item:nth-child(3) .style-text {
  color: #333333;
}

.style-name {
  display: block;
  font-size: 26rpx;
  color: #333333;
  padding: 16rpx;
  text-align: center;
}

.style-price {
  display: block;
  font-size: 24rpx;
  color: #ff6b35;
  padding: 0 16rpx 16rpx;
  text-align: center;
  font-weight: 600;
}

/* 尺寸选择 */
.size-section {
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.size-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.size-item {
  background: #ffffff;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.size-item.active {
  border-color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.size-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.size-desc {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.size-price {
  display: block;
  font-size: 26rpx;
  color: #ff6b35;
  font-weight: 600;
}

/* 卡纸颜色 */
.mat-section {
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.mat-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 20rpx;
}

.mat-item {
  background: #ffffff;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.mat-item.active {
  border-color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.mat-color {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0 auto 12rpx;
  border: 2rpx solid #e0e0e0;
}

.mat-name {
  display: block;
  font-size: 24rpx;
  color: #333333;
}

/* 操作区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 32rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 24rpx;
  z-index: 100;
}

.price-info {
  flex: 1;
}

.price-label {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 4rpx;
}

.price-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6b35;
}

.preview-btn {
  background: linear-gradient(135deg, #07c160, #10ad6a);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 32rpx rgba(7, 193, 96, 0.3);
}
