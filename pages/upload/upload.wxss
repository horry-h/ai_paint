/** 上传页面 - 微信风格卡片设计 */
page {
  background: #f7f7f7;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  padding: 32rpx;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 60rpx;
}

.upload-card {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.upload-area {
  min-height: 400rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  background: #fafafa;
}

.upload-area:active {
  border-color: #07c160;
  background: rgba(7, 193, 96, 0.05);
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

.upload-placeholder {
  text-align: center;
  padding: 60rpx 40rpx;
}

.upload-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
  color: #666666;
}

.upload-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.upload-desc {
  display: block;
  font-size: 26rpx;
  color: #666666;
}

/* 裁切区域 */
.crop-section {
  margin-bottom: 60rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.crop-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.crop-item {
  background: #ffffff;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.crop-item.active {
  border-color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.crop-preview {
  width: 100%;
  max-width: 120rpx;
  margin: 0 auto 16rpx;
  background: #fafafa;
  border-radius: 8rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.crop-name {
  display: block;
  font-size: 26rpx;
  color: #333333;
}

/* 操作区域 */
.action-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.btn-secondary {
  flex: 1;
  background: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 24rpx;
  color: #333333;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.btn-primary {
  flex: 1;
  background: linear-gradient(135deg, #07c160, #10ad6a);
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.2);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
  color: #666666;
}

.empty-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}
