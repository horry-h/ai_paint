/** AI生成页面 - 微信风格卡片设计 */
page {
  background: #f7f7f7;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  padding: 32rpx;
}

/* 输入区域 */
.input-section {
  margin-bottom: 60rpx;
}

.input-card {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.prompt-input {
  width: 100%;
  min-height: 120rpx;
  background: #fafafa;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 24rpx;
  color: #333333;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.prompt-input:focus {
  border-color: #07c160;
  background: #ffffff;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #666666;
  margin-top: 16rpx;
}

/* 标签区域 */
.tags-section {
  margin-bottom: 32rpx;
}

.tags-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 16rpx 24rpx;
  background: #fafafa;
  border: 1rpx solid #e0e0e0;
  border-radius: 20rpx;
  color: #666666;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.tag.active {
  background: linear-gradient(135deg, #07c160, #10ad6a);
  border-color: transparent;
  color: #ffffff;
}

/* 选项区域 */
.options-section {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.option-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.option-label {
  font-size: 28rpx;
  color: #333333;
}

.picker-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: #fafafa;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  color: #333333;
  font-size: 26rpx;
}

.picker-arrow {
  font-size: 20rpx;
  color: #666666;
}

.generate-btn {
  width: 100%;
  background: linear-gradient(135deg, #07c160, #10ad6a);
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 32rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.generate-btn:active {
  transform: scale(0.98);
}

.generate-btn[disabled] {
  opacity: 0.6;
  background: #cccccc;
}

/* 结果区域 */
.results-section {
  margin-bottom: 60rpx;
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.results-count {
  font-size: 24rpx;
  color: #666666;
}

.results-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.result-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  background: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.result-item.selected {
  border-color: #07c160;
  box-shadow: 0 0 20rpx rgba(7, 193, 96, 0.3);
}

.result-preview {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
}

.result-text {
  color: #333333;
  font-size: 26rpx;
  font-weight: 600;
}

.select-overlay {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.result-item.selected .select-overlay {
  opacity: 1;
  background: #07c160;
}

.select-icon {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.action-bar {
  display: flex;
  gap: 24rpx;
}

.btn-secondary {
  flex: 1;
  background: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 24rpx;
  color: #333333;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.btn-primary {
  flex: 1;
  background: linear-gradient(135deg, #07c160, #10ad6a);
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.2);
}

.btn-primary[disabled] {
  opacity: 0.6;
  background: #cccccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}
