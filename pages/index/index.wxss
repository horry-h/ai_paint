/** 首页 - 微信风格卡片设计 */
page {
  background: #f7f7f7;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部横幅 */
.hero-section {
  position: relative;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #07c160 0%, #10ad6a 100%);
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 0 40rpx;
}

.hero-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.hero-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 快速操作区 */
.quick-actions {
  padding: 0 32rpx;
  margin-bottom: 60rpx;
}

.action-card {
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

.action-card.primary {
  background: linear-gradient(135deg, #07c160, #10ad6a);
  border-color: transparent;
  box-shadow: 0 8rpx 32rpx rgba(7, 193, 96, 0.3);
}

.action-card.primary .action-title,
.action-card.primary .action-desc {
  color: #ffffff;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.action-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333333;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 最近作品 */
.recent-section {
  padding: 0 32rpx;
  margin-bottom: 60rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.section-more {
  font-size: 28rpx;
  color: #07c160;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(7, 193, 96, 0.1);
}

.recent-scroll {
  white-space: nowrap;
}

.recent-list {
  display: flex;
  gap: 20rpx;
  padding: 8rpx 0;
}

.recent-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
  border: 2rpx solid #f0f0f0;
  background: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.recent-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.recent-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: 20rpx 16rpx 16rpx;
}

.recent-date {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 400rpx;
  height: 200rpx;
  background: #ffffff;
  border-radius: 20rpx;
  border: 2rpx dashed #e0e0e0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

/* 推荐样式 */
.featured-section {
  padding: 0 32rpx;
}

.featured-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.featured-item {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.featured-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.featured-preview {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx 16rpx 0 0;
  position: relative;
  background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
}

.featured-text {
  color: #333333;
  font-size: 28rpx;
  font-weight: 600;
}

.featured-item:nth-child(3) .featured-text {
  color: #333333;
}

.featured-info {
  padding: 20rpx;
}

.featured-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.featured-price {
  display: block;
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: 600;
}
