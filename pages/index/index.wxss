/** 首页 - 专业UI设计样式 */
page {
  background: linear-gradient(135deg, #0b0c10 0%, #1a1d2a 100%);
  color: #e7ecf3;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.page {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部横幅 */
.hero-section {
  position: relative;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #4f8cff 0%, #7c3aed 50%, #ec4899 100%);
  opacity: 0.1;
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 0 40rpx;
}

.hero-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #4f8cff, #7c3aed);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  display: block;
  font-size: 28rpx;
  color: #8891a4;
  line-height: 1.5;
}

/* 快速操作区 */
.quick-actions {
  padding: 0 32rpx;
  margin-bottom: 60rpx;
}

.action-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.08);
}

.action-card.primary {
  background: linear-gradient(135deg, #4f8cff, #7c3aed);
  border-color: transparent;
  box-shadow: 0 8rpx 32rpx rgba(79, 140, 255, 0.3);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.action-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #e7ecf3;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: #8891a4;
  line-height: 1.4;
}

/* 最近作品 */
.recent-section {
  padding: 0 32rpx;
  margin-bottom: 60rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #e7ecf3;
}

.section-more {
  font-size: 28rpx;
  color: #4f8cff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(79, 140, 255, 0.1);
}

.recent-scroll {
  white-space: nowrap;
}

.recent-list {
  display: flex;
  gap: 20rpx;
  padding: 8rpx 0;
}

.recent-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
  border: 2px solid rgba(255, 255, 255, 0.1);
}

.recent-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.recent-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 20rpx 16rpx 16rpx;
}

.recent-date {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 400rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  border: 2px dashed rgba(255, 255, 255, 0.2);
}

.empty-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #8891a4;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #6b7280;
  text-align: center;
}

/* 推荐样式 */
.featured-section {
  padding: 0 32rpx;
}

.featured-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.featured-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.featured-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.08);
}

.featured-preview {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx 16rpx 0 0;
  position: relative;
}

.featured-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.featured-item:nth-child(3) .featured-text {
  color: #000000;
}

.featured-info {
  padding: 20rpx;
}

.featured-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #e7ecf3;
  margin-bottom: 8rpx;
}

.featured-price {
  display: block;
  font-size: 24rpx;
  color: #4f8cff;
  font-weight: 600;
}
