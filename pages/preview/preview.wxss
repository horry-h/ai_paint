/** 3D预览页面 - 微信风格卡片设计 */
page {
  background: #f7f7f7;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 预览区域 */
.preview-section {
  padding: 32rpx;
  margin-bottom: 32rpx;
}

/* 预览框容器 */
.preview-frame {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  border: 1rpx solid #f0f0f0;
  position: relative;
  overflow: hidden;
}

.preview-frame::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(7, 193, 96, 0.05) 0%, rgba(16, 173, 106, 0.05) 100%);
  border-radius: 24rpx;
  pointer-events: none;
}

.preview-container {
  position: relative;
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  min-height: 500rpx;
}

.touch-hint {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  z-index: 10;
  animation: fadeInOut 3s ease-in-out infinite;
}

.hint-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

/* 3D模型容器 */
.model-container {
  width: 100%;
  height: 500rpx;
  position: relative;
  background: #ffffff;
}

.webgl-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 备用2D预览 */
.fallback-preview {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  perspective: 1000rpx;
  background: #ffffff;
}

.frame-preview {
  width: 300rpx;
  height: 200rpx;
  border: 8rpx solid #8B4513;
  border-radius: 8rpx;
  overflow: hidden;
  transition: transform 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.frame-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.model-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
}

.placeholder-text {
  color: #333333;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.placeholder-subtext {
  color: #666666;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.frame-placeholder {
  width: 200rpx;
  height: 120rpx;
  border: 4rpx solid #333333;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #8B4513;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.frame-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

/* 错误状态 */
.error-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 30;
}

.error-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.error-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  background: linear-gradient(135deg, #07c160, #10ad6a);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}

/* 控制区域 */
.controls-section {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.control-tips {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tip-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

/* 缩放控制 */
.scale-controls {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.scale-btn {
  flex: 1;
  height: 64rpx;
  background: #ffffff;
  color: #333333;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.scale-btn:active {
  transform: scale(0.95);
  background: rgba(7, 193, 96, 0.1);
  border-color: #07c160;
}

.control-row {
  display: flex;
  gap: 16rpx;
}

.control-btn {
  flex: 1;
  height: 80rpx;
  background: #ffffff;
  color: #333333;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.control-btn:active {
  transform: scale(0.98);
}

/* 重置全部按钮特殊样式 */
.control-row .scale-btn {
  background: linear-gradient(135deg, #ff6b35, #ff8c42);
  color: #ffffff;
  border-color: transparent;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.2);
}

/* 商品信息 */
.info-section {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.info-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.info-price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: 700;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 24rpx 32rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-secondary {
  flex: 1;
  height: 80rpx;
  background: #ffffff;
  color: #333333;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-primary {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #07c160, #10ad6a);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}
